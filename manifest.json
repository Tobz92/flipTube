{
  "manifest_version": 2,

  "name": "mirrorTube",
  "description": "Lets the user mirror the Youtube Content.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["http://www.youtube.com/*", "https://www.youtube.com/*"],
      //"css": ["mystyles.css"],
      "js": ["js/mirror.js"],
      "run_at": "document_end"
    }
  ]
}
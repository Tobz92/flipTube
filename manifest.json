{
  "manifest_version": 2,

  "name": "mirrorTube",
  "description": "Let the user mirror the Youtube Content.",
  "version": "0.1",

  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "img/reflektieren16.png",
    "32": "img/reflektieren32.png",
    "48": "img/reflektieren48.png",
    "128": "img/reflektieren128.png"
  },
  "content_scripts": [
    {
      "matches": ["http://www.youtube.com/*", "https://www.youtube.com/*"],
      "css": ["css/styles.css"],
      "js": ["js/mirror.js"],
      "run_at": "document_end"
    }
  ]
}
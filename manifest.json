{
  "manifest_version": 2,

  "name": "mirrorTube",
  "description": "Lets the user mirror the Youtube Content.",
  "version": "1.0",

  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["http://www.youtube.com/*", "https://www.youtube.com/*"],
      "css": ["css/styles.css"],
      "js": ["js/mirror.js"],
      "run_at": "document_end"
    }
  ]
}